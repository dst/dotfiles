# Multi files configuration for ssh
prepare_ssh_config() {
  SSH_CONF="$HOME/.ssh/config"

  SSH_CONF_HEADER="
######################
### DO NOT EDIT!!! ###
######################
#
# See ~/.ssh/configs

" 
  echo "$SSH_CONF_HEADER"  > $SSH_CONF
  cat ~/.ssh/configs/* >> $SSH_CONF
}
prepare_ssh_config

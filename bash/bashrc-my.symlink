# My

# Make vim the default editor
export EDITOR=vim

# Set prompt (branch name for git repos)
# black-white
#export PS1='${debian_chroot:+($debian_chroot)}\u@\h \t:\w$(__git_ps1 " (%s) ")\$ '
# color
export PS1='${debian_chroot:+($debian_chroot)}\[\033[01;32m\]\u@\h \t\[\033[00m\]:\[\033[01;34m\]\w\[\033[00m\]$(__git_ps1 " (%s) ")\$ '

# Larger bash history (2^16)
export HISTSIZE=65536
export HISTFILESIZE=$HISTSIZE

export PATH=~/bin/my:$PATH


function startProgram {
    program=$1
    shift
    args="$@"

    echo "Starting program: $program $args"
    $program $args > /dev/null 2>&1 &
}

function startPrograms {
    programs="$@"

    for program in $programs
    do
        startProgram $program
    done
}


function pullGitRepo {
    repo=$1

    cd $repo
    echo "Pulling git repo $repo"
    git pull

    # Go back
    cd -
}